<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardCodedText"

    >

    <RelativeLayout
        android:id="@+id/number_buttons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/lowerHalfButtonBackground"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="@id/centerVerticalSeparator"
        app:layout_constraintTop_toTopOf="@id/centerVerticalSeparator">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="4"

            android:layout_margin="8dp"

            >

            <Button
                android:id="@+id/seven"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="7"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"

                />

            <Button
                android:id="@+id/eight"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="8"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/nine"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="9"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/four"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="4"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/five"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="5"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/six"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="6"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/one"
                android:layout_width="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="1"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/two"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="2"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"

                android:layout_height="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="3"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/zero"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:onClick="onSimpleButtonClick"

                android:text="0"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/decimal"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="."
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"

                android:onClick="onSimpleButtonClick"
                />

            <Button
                android:id="@+id/decimaltoggle"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"

                android:text="D"
                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"

                android:textColor="@color/decimalcolor"
                android:onClick="decimalToggle"
                />

        </GridLayout>

    </RelativeLayout>

    <View
        android:id="@+id/centerVerticalSeparator"
        android:layout_width="@dimen/calculator_separator_width"
        android:layout_height="@dimen/calculator_buttonpad_height"

        android:background="@android:color/darker_gray"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"


        app:layout_constraintStart_toStartOf="parent" />



    <RelativeLayout
        android:id="@+id/operators"

        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/centerVerticalSeparator"

        app:layout_constraintTop_toTopOf="@id/centerVerticalSeparator"

        android:background="@color/lowerHalfButtonBackground"

        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:columnCount="2"
            android:rowCount="4"

            android:layout_margin="8dp"



            >

            <Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="0dp"


                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="÷"

                android:textAlignment="gravity"

                android:textSize="@dimen/calculator_button_number_textSize"
                android:onClick="onSimpleButtonClick"

                android:textColor="@color/operator_color"
                />

            <Button
                android:id="@+id/multiply"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="×"

                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"
                android:textColor="@color/operator_color"
                android:onClick="onSimpleButtonClick"

                />

            <Button
                android:id="@+id/subtract"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                android:layout_gravity="fill"
                android:layout_row="2"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="–"

                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"
                android:textColor="@color/operator_color"
                android:onClick="onSimpleButtonClick"

                />

            <Button
                android:id="@+id/add"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                android:layout_gravity="fill"
                android:layout_row="3"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="+"

                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"
                android:textColor="@color/operator_color"

                android:onClick="onSimpleButtonClick"
                />

            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:layout_row="0"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="⌫"

                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"
                android:textColor="@color/operator_color"
                android:onClick="delete"

                />

            <Button
                android:id="@+id/equals"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"

                android:layout_gravity="fill"
                android:layout_row="3"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="="

                android:textAlignment="gravity"
                android:textSize="@dimen/calculator_button_number_textSize"
                android:textColor="@color/operator_color"

                android:onClick="commitResult"
                />

        </GridLayout>

    </RelativeLayout>

    <View
        android:id="@+id/centerHorizontalSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calculator_separator_width"
        android:background="@android:color/darker_gray"

        app:layout_constraintBottom_toTopOf="@id/centerVerticalSeparator"
        />


    <RelativeLayout
        android:id="@+id/functions"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toTopOf="@id/centerHorizontalSeparator"
        app:layout_constraintTop_toBottomOf="@id/centerHorizontalSeparator2"

        android:background="@color/upperHalfButtonBackground"



        >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="8dp"

            android:columnCount="6"
            android:rowCount="3"
            >

            <Button
                android:id="@+id/factorial"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_row="0"
                android:onClick="onSimpleButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="!"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/natural_logarithm"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"
                android:layout_row="0"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="ln"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"/>

            <Button
                android:id="@+id/tenth_logarithm"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="2"
                android:layout_row="0"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="log"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/second_logarithm"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="3"
                android:layout_row="0"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="log2"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"/>

            <Button
                android:id="@+id/degreesradians"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="4"
                android:layout_row="0"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="RAD"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:onClick="changeAngleUnit"
                />

            <Button
                android:id="@+id/power"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_row="1"
                android:onClick="onSimpleButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="^"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/square_root"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"
                android:layout_row="1"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="√"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/sine"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="2"
                android:layout_row="1"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="sin"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/cosine"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="3"
                android:layout_row="1"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="cos"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/tangent"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="4"
                android:layout_row="1"
                android:onClick="onFunctionButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="tan"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/constant_e"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="0"
                android:layout_row="2"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="e"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"

                android:onClick="onSimpleButtonClick"
                />

            <Button
                android:id="@+id/constant_pi"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="1"
                android:layout_row="2"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="π"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"
                android:textAllCaps="false"
                android:onClick="onSimpleButtonClick"

                />

            <Button
                android:id="@+id/constant_percent"
                android:layout_width="0dp"

                android:layout_height="0dp"

                android:layout_column="2"
                android:layout_row="2"
                android:onClick="onSimpleButtonClick"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="%"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize"

                android:textAllCaps="false"/>

            <Button
                android:id="@+id/left_paren"
                android:layout_width="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_height="0dp"

                android:layout_column="3"
                android:layout_row="2"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text="("
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize" />

            <Button
                android:id="@+id/right_paren"
                android:layout_width="0dp"
                android:onClick="onSimpleButtonClick"

                android:layout_height="0dp"

                android:layout_column="4"
                android:layout_row="2"

                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"

                android:text=")"
                android:gravity="center"
                android:textAlignment="gravity"

                android:background="?android:attr/selectableItemBackground"

                android:textSize="@dimen/calculator_button_number_textSize" />

            <ToggleButton
                    android:id="@+id/invert"
                    android:layout_width="0dp"
                    android:onClick="onInvertButtonClick"

                    android:layout_height="0dp"

                    android:layout_column="5"
                    android:layout_row="2"

                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_gravity="fill"

                    android:textOn="Inv"
                    android:textOff="Inv"

                    android:gravity="center"
                    android:textAlignment="gravity"

                    android:background="@drawable/toggle_selector"


                    android:textSize="@dimen/calculator_button_number_textSize"
                    android:textAllCaps="false"


                    />
<!--            android:background="?android:attr/selectableItemBackground"-->

        </GridLayout>
        




    </RelativeLayout>

    <View
        android:id="@+id/centerHorizontalSeparator2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/calculator_separator_width"

        android:background="@android:color/darker_gray"

        app:layout_constraintBottom_toTopOf="@id/centerVerticalSeparator"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/preview"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="8dp"

        android:textSize="@dimen/calculator_preview_textsize"
        android:gravity="end"

        app:layout_constraintBottom_toTopOf="@id/centerHorizontalSeparator2"
        android:text="placeholder"

        android:scrollHorizontally="true"
        android:singleLine="true"

        />

    <EditText
        android:id="@+id/result"

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_margin="8dp"


        android:layout_marginTop="8dp"

        android:text="placeholder"

        android:textSize="@dimen/calculator_result_textSize"

        android:gravity="end"

        app:layout_constraintBottom_toTopOf="@id/preview"
        app:layout_constraintTop_toTopOf="parent"


        android:scrollHorizontally="true"
        android:singleLine="true"
        android:focusable="false"
        android:inputType="textNoSuggestions"
        />

</android.support.constraint.ConstraintLayout>